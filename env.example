# Database Configuration
DATABASE_URL=postgresql://username:password@host/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://yuno-geospatial-social-media.vercel.app
CORS_ORIGIN=https://yuno-geospatial-social-media.vercel.app

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://yuno-geospatial-social-media.vercel.app/api
NEXT_PUBLIC_SOCKET_URL=https://yuno-geospatial-social-media.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
